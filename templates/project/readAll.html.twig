					<div class="col-auto">
						<label for="sortBy" class="visually-hidden">Trier par</label>
						<select class="form-select" id="sortBy" name="sortBy" onchange="this.form.submit()">
							<option value="default" {% if app.request.get('sortBy') == 'default' %} selected {% endif %}>Par défaut</option>
