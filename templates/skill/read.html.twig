{# templates/skill/read.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Détails de la compétence{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Détails de la compétence</h1>

        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">ID : {{ skill.id }}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Nom : {{ skill.name }}</h6>
                        <p class="card-text">Description : {{ skill.description }}</p>

                        <h6 class="mt-3">Projets associés :</h6>
                        {% if skill.project is not empty %}
                            <div class="d-flex flex-wrap">
                                {% for project in skill.project %}
                                    <span class="badge badge-primary mr-2 mb-2">{{ project.name }}</span>
                                {% endfor %}
                            </div>
                        {% else %}
                            <span class="badge badge-secondary">Aucun projet associé</span>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <a href="{{ path('read_all') }}" class="btn btn-secondary mt-3">Retour à la liste des compétences</a>
    </div>
{% endblock %}
