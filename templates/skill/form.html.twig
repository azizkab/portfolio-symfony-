{# templates/skill/form.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Gestion des compétences
{% endblock %}

{% block body %}
	<div class="container" style="margin-top: 50px; background-color: var(--bg-color); color: var(--text-color);">

		<h1 class="text-dark">
			{% if type == 'create' %}Création{% else %}Modification
			{% endif %}
			d'une compétence</h1>

		<div class="card mt-4" style="background-color: var(--second-bg-color); color: var(--text-color); padding: 20px;">

			{{ form_start(form) }}

			{{ form_row(form.name, {'attr': {'class': 'form-control mb-3', 'placeholder': 'Nom de la compétence'}}) }}

			{{ form_row(form.description, {'attr': {'class': 'form-control mb-3', 'placeholder': 'Description de la compétence'}}) }}
			{{ form_row(form.project, {'attr': {'class': 'form-control mb-3', 'placeholder': 'Projet associé'}}) }}

			<button type="submit" class="btn btn-primary">Enregistrer</button>

			{{ form_end(form) }}


			<a href="{{ path('read_all') }}" class="btn btn-secondary mt-3">Retour à la liste des compétences</a>

		</div>
	</div>
{% endblock %}
